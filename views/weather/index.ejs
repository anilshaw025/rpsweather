<%- include('../include/head.ejs') %>
<link rel="stylesheet" href="/css/nav.css">
</head>

<body>
    <%- include('../include/navigation.ejs') %>

    <main class="container">
        <form class="product-form" action="/" method="POST">
            <div class="form-control">
                <input type="text" name="city" id="city" placeholder="Enter City">
            </div>

            <button class="btn" type="submit">Search</button>
        </form><br><br>
         
        <div class="date"></div>
        <div class="icon"></div>
 
        <div class="row">
            <div class="column">
                <div class="card">
                    <div class="temperature">
                        <h3>Temperature: &nbsp;<span></span></h3>
                    </div>
                    <div class="feelslike">
                        <h3>Feels Like: &nbsp;<span></span></h3>
                    </div>
                    <div class="description">
                        <div class="weatherCondition">
                            <h3>Weather Condition: &nbsp; <span></span></h3>
                        </div>
                        <div class="visibility">
                            <h3>Visibility: &nbsp; <span></span></h3>
                        </div>
                        <div class="place">
                            <h3>
                                Location: &nbsp; <span></span>
                                <h3 class="region"> <span></span></h3> 
                                <h3 class="country"> <span></span></h3>
                            </h3>
                        </div>
                    </div>
                </div>
            </div>

            <div class="column">
                <div class="card">
                    <div class="humidity">
                        <h3>Humidity:  &nbsp;<span></span></h3>
                    </div>
                    <div class="wind_speed">
                        <h3>Wind Speed:  &nbsp;<span></span></h3>
                    </div>
                        <div class="wind">
                            <h3>Direction: &nbsp;<span></span></h3>
                        </div>
                        <div class="pressure">
                            <h3>Pressure:  &nbsp; <span></span></h3>
                        </div>
                        <div class="uv_index">
                            <h3>UV Index: &nbsp; <span></span></h3>
                        </div>
                    </div>
                </div>    
            </div>        
        
    </main>

    <%- include('../include/footer.ejs') %>